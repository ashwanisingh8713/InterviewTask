<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp"
    android:paddingTop="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/column1"
        android:layout_width="0dp"
        android:layout_height="@dimen/row_item_height"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/column2"
        android:layout_marginRight="1dp"
        >

        <ImageView
            android:id="@+id/column1_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/column1_tv"/>

        <TextView
            android:id="@+id/column1_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:maxLines="2"
            android:minLines="2"/>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/column2"
        android:layout_width="0dp"
        android:layout_height="@dimen/row_item_height"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/column1"
        android:layout_marginLeft="1dp"
        >

        <ImageView
            android:id="@+id/column2_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/column2_tv"
            />

        <TextView
            android:id="@+id/column2_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:maxLines="2"
            android:minLines="2"/>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>